<p id="notice"><%= notice %></p>

<h1>Profiles</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>First aid</th>
      <th>Wilderness first aid</th>
      <th>Previous trips</th>
      <th>Age</th>
      <th>Gender</th>
      <th>Training</th>
      <th>City</th>
      <th>Favourite park</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.description %></td>
        <td><%= profile.first_aid %></td>
        <td><%= profile.wilderness_first_aid %></td>
        <td><%= profile.previous_trips %></td>
        <td><%= profile.age %></td>
        <td><%= profile.gender %></td>
        <td><%= profile.training %></td>
        <td><%= profile.city %></td>
        <td><%= profile.favourite_park %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

